<?xml version="1.0"?>

<!DOCTYPE SampleAssembly>

<SampleAssembly name="Fe">
  
  <PowderSample name="Fe" type="sample">
    <Shape>
      <block width="10*cm" height="10*cm" thickness="1*mm" />
    </Shape>
    <Phase type="crystal">
      <ChemicalFormula>Fe</ChemicalFormula>
      <xyzfile>Fe.xyz</xyzfile>
    </Phase>
  </PowderSample>
  
  <LocalGeometer registry-coordinate-system="InstrumentScientist">
    <Register name="Fe" position="(0,0,0)" orientation="(0,0,45)"/>
  </LocalGeometer>
<!--
  <environment>
    <temperature>300*K</temperature>
    <pressure>1.*atm</pressure>
  </environment>
-->

</SampleAssembly>
