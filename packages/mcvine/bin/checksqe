#!/usr/bin/env python
import warnings
warnings.simplefilter('ignore')
import mcvine
warnings.simplefilter('default')

def buildApp():
    from mcvine.applications.InstrumentBuilder import build
    components = ['source', 'monitor']
    return build(components)


def main():
    base = buildApp()
    class App(base):
        
        def help(self):
            super(App, self).help()
            print
            print 'Examples:'
            print
            print ' $ checksqe -source.path=neutrons-to-check -monitor.Ei=100 -monitor.Emin=-95 -monitor.Emax=95 -monitor.nE=190'
            print
            print

    app = App('checksqe')
    return app.run()
        
if __name__ == '__main__': main()


# $Id$
